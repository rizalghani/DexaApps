@*@model IEnumerable<DexaApps.Models.Customers>*@
@model CustomerViewModel


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header header-elements-inline">
        <h5 class="card-title font-weight-bold text-primary">Overview Customer List</h5>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="reload"></a>
                <a class="list-icons-item" data-action="remove"></a>
            </div>
        </div>
    </div>

    <div class="card-body">
        <a asp-action="Create" class="btn btn-primary btn-labeled btn-labeled-left"><b><i class="icon-plus22"></i></b> Create</a>
        <table id="table-index-customer" class="table table-bordered table-hover" style="width:100%">
            <thead class="bg-primary text-center">
                <tr class="font-weight-bold">
                    <th>
                        No
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Customers.CustomerID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Customers.CustomerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Customers.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Customers.Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Customers.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Customers.EndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Customers.OutletID)
                    </th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int no = 1;
                    foreach (var item in Model.ListCustomer)
                    {
                        <tr>
                            <td class="text-center" width="3%">
                                @no
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.CustomerID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.OutletID)
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.CustomerID"><i class="icon-database-edit2 mr-1"></i>Edit</a> |
                                <a asp-action="Delete" asp-route-id="@item.CustomerID">Delete <i class="icon-folder-remove ml-1"></i></a>
                            </td>
                        </tr>
                        no++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>

