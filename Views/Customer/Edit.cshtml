@model DexaApps.Models.Customers
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content">

    <!-- Form inputs -->
    <div class="card">
        <div class="card-header header-elements-inline">
            <h5 class="card-title font-weight-bold text-success"><i class="icon-stack2 mr-1"></i> Edit Customer</h5>
            <div class="header-elements">
                <div class="list-icons">
                    <a class="list-icons-item" data-action="reload"></a>
                    <a class="list-icons-item" data-action="remove"></a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <fieldset class="mb-3">
                    <legend class="text-uppercase font-size-sm font-weight-bold">Update Data</legend>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="StartDate" />
                    <input type="hidden" asp-for="EndDate" />

                    <div class="form-group row">
                        <label asp-for="CustomerID" class="col-form-label col-lg-2 font-weight-bold"></label>
                        <div class="col-lg-3">
                            <input asp-for="CustomerID" class="form-control" readonly />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="CustomerName" class="col-form-label col-lg-2 font-weight-bold"></label>
                        <div class="col-lg-3">
                            <input asp-for="CustomerName" class="form-control" />
                        </div>
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Code" class="col-form-label col-lg-2 font-weight-bold"></label>
                        <div class="col-lg-3">
                            <input asp-for="Code" class="form-control" />
                        </div>
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Address" class="col-form-label col-lg-2 font-weight-bold"></label>
                        <div class="col-lg-5">
                            <input asp-for="Address" class="form-control" />
                        </div>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="OutletID" class="col-form-label col-lg-2 font-weight-bold"></label>
                        <div class="col-lg-3">
                            <select id="select_type" name="OutletID" class="form-control select" asp-for="OutletID" asp-items="@(new SelectList(ViewBag.OutlateList, "OutletID", "OutletName"))" data-fouc>
                                <option value="">Select a Outlet</option>
                            </select>
                        </div>
                        <span asp-validation-for="OutletID" class="text-danger"></span>
                    </div>


                    <div class="form-group row">
                        <a asp-action="Index" class="btn btn-link"><i class="icon-backward mr-1"></i> Back to List</a>
                        <button type="submit" class="btn btn-success btn-labeled btn-labeled-left"><b><i class="icon-database-edit2 mr-1"></i></b> EDIT</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>

