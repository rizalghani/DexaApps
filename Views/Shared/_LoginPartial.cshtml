@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav ml-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="navbar-nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Hello <span class="font-weight-bold">@User.Identity.Name</span>
            </a>
        </li>

        <li class="nav-item pt-1">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white">
                    <i class="icon-exit3 mr-1"></i>Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Register" class="navbar-nav-link">
                <i class="icon-inbox mr-1"></i>
                <span>Register</span>
            </a>
        </li>
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Login" class="navbar-nav-link">
                <i class="icon-inbox-alt mr-1"></i>
                <span>Login</span>
            </a>
        </li>
    }
</ul>