@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a asp-controller="Home" asp-action="Index" class="navbar-nav-link btn-link text-white">
                <i class="icon-home mr-2"></i>
                Dashboard
            </a>
        </li>
        <li class="nav-item">
            <a asp-controller="Outlet" asp-action="Index" class="navbar-nav-link btn-link text-white">
                <i class="icon-location4 mr-2"></i>
                Outlet
            </a>
        </li>
        <li class="nav-item dropdown">
            <a asp-controller="Customer" asp-action="Index" class="navbar-nav-link btn-link text-white dropdown-toggle" data-toggle="dropdown">
                <i class="icon-stack2 mr-2"></i>
                Customer
            </a>
            <div class="dropdown-menu">
                <a asp-controller="Customer" asp-action="Index" class="dropdown-item"><i class="icon-list2 mr-2"></i>Overview</a>
                <a asp-controller="Customer" asp-action="Create" class="dropdown-item"><i class="icon-stack-plus mr-2"></i>Create</a>
            </div>
        </li>
    </ul>

    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="navbar-nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Hello <span class="font-weight-bold text-white">@User.Identity.Name</span>
            </a>
        </li>

        <li class="nav-item pt-1">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white">
                    <i class="icon-exit3 mr-1"></i>Logout
                </button>
            </form>
        </li>

    </ul>
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Register" class="navbar-nav-link btn-link text-white">
                <i class="icon-gallery mr-1"></i>
                <span>Register</span>
            </a>
        </li>
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Login" class="navbar-nav-link btn-link text-white">
                <i class="icon-enter3 mr-1"></i>
                <span>Login</span>
            </a>
        </li>
    </ul>
}
